/ SEO
title
  = meta_tag_title
meta name="description"           content=meta_tag_description
meta name="author"                content="#{data.settings.site.author}"
meta name="robots"                content="index, follow"

link href=meta_tag_url rel='canonical'
link href="#{meta_tag_url}feed.xml" rel='alternate' title=data.settings.site.title type='application/rss+xml'

/ Geocoding
meta name="geo.placename"         content="#{data.settings.site.geo.placename}"
meta name="geo.position"          content="#{data.settings.site.geo.position}"
meta name="geo.region"            content="#{data.settings.site.geo.region}"

/ Microdata
meta itemprop="name"              content=meta_tag_title
meta itemprop="description"       content=meta_tag_description
meta itemprop="image"             content=meta_tag_image

/ Facebook Open Graph
meta property="og:site_name"      content="#{data.settings.site.title}"
meta property="og:title"          content="#{current_page.data.title}"
meta property="og:description"    content=meta_tag_description
meta property="og:image"          content=meta_tag_image(:facebook)
meta property="og:type"           content="website"
meta property="og:url"            content=meta_tag_url
meta property="fb:app_id"         content=data.settings.social.facebook.app_id

/ Google+
meta itemprop="name"              content=meta_tag_title
meta itemprop="image"             content=meta_tag_image(:google)

/ Twitter Card
meta name="twitter:card"          content="summary_large_image"
meta name="twitter:site"          content="@#{data.settings.social.twitter}"
meta name="twitter:title"         content="#{current_page.data.title}"
meta name="twitter:description"   content=meta_tag_description
meta name="twitter:image"         content=meta_tag_image(:twitter)
meta name="twitter:creator"       content="@#{data.settings.social.twitter_creator}"

